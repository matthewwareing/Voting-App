<!-- views/login.ejs -->
<!doctype html>
<html>

<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <!-- load bootstrap css -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- load fontawesome -->
  <style>
    body {
      padding-top: 80px;
    }
  </style>
</head>

<body>
  <div class="container d-flex justify-content-around">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>
        <span class="fa fa-lock"></span> Node Authentication</h1>
      <p>Login or Register with:</p>
      <!-- show any messages that come back with authentification -->
      <% if (message.length > 0) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>

          <div class="card">
            <div class="card-body">
              <img src="./images/bar-chart.png" class="profile-img-card w-25" alt="..." class="rounded-circle">
              <!-- LOGIN FORM -->
              <form action="/login" method="post">
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Login</button>

                <a href="/signup" class="btn btn-warning">
                  <span class="fa fa-user"></span> Local Signup</a>
                <a href="/auth/facebook" class="btn btn-primary">
                  <span class="fa fa-facebook"></span> Facebook</a>
                <a href="/auth/twitter" class="btn btn-info">
                  <span class="fa fa-twitter"></span> Twitter</a>
                <a href="/auth/google" class="btn btn-danger">
                  <span class="fa fa-google-plus"></span> Google+</a>
              </form>
            </div>
          </div>
          <br>
          <p>Need an account?
            <a href="/signup">Signup</a>
          </p>
          <p>Or go
            <a href="/">home</a>.</p>
    </div>
  </div>
</body>

</html>